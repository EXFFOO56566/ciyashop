<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DeleteAccountActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <include layout="@layout/toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.example.ciyashop.customview.textview.TextViewBold
            android:id="@+id/tvDeleleteAccount"
            style="@style/txt_black_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/value_10"
            android:gravity="start"
            android:padding="@dimen/_8sdp"
            android:layout_margin="@dimen/_10sdp"
            android:text="@string/delete_account"
            android:textAlignment="viewStart"
            android:textDirection="locale" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/field_bg"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_10sdp">

            <com.example.ciyashop.customview.edittext.EditTextRegular
                android:id="@+id/etEmail"
                style="@style/txt_gray_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/font_10"
                android:gravity="start|center"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textDirection="locale"
                app:drawableStartCompat="@drawable/ic_mail" />

        </LinearLayout>


        <com.example.ciyashop.customview.textview.TextViewBold
            android:id="@+id/tvDelete"
            style="@style/txt_white_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/primary_round_button"
            android:gravity="center"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="@string/delete"
            android:textStyle="bold" />


    </LinearLayout>


















</LinearLayout>